<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#0FB3FF" />
            <stroke
                android:width="5dp"
                android:color="#006294" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item> 
        <shape>
            <gradient
                android:startColor="#3399CC"
                android:endColor="#3399CC"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#ffffff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
</selector>